<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnimSampleActivity">

    <FrameLayout
        android:id="@+id/animparentaaa"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@color/right_yellow"
        >

        <com.mark.colocpatternsample.AnimView
            android:id="@+id/animColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pettern1"/>

        <com.mark.colocpatternsample.AnimView
            android:id="@+id/animparent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@color/pettern2"/>

    </FrameLayout>

    <Button
        android:id="@+id/bt_switch"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="色変更"
        android:textSize="20sp"
        android:gravity="center"
        />

</LinearLayout>